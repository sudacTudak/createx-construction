extends ./pug/layout/main

block append vars
    - var siteTitle = 'Createx Construction';
    - var pageClass = 'index-page';

block content
    main.page
        section.page-hero.page-hero--work-inner
            .container 
                ul.page-hero__breadcrumps.breadcrumps
                    li.breadcrumps__item 
                        a.breadcrumps__link(href="index.html") Homepage
                    li.breadcrumps__item 
                        a.breadcrumps__link(href="work.html") Work
                    li.breadcrumps__item 
                        a.breadcrumps__link Modern Cottage
                .page-hero__content.block-main.block-main--small.block-main--mb 
                    h1.block-main__title Modern Cottage
                .work-images 
                    .work-images__slider.swiper
                        .swiper-wrapper 
                            .swiper-slide 
                                +img('hero-work-inner/work-images_01.jpg', 'image 1')
                            .swiper-slide 
                                +img('hero-work-inner/work-images_01.jpg', 'image 1')
                            .swiper-slide 
                                +img('hero-work-inner/work-images_01.jpg', 'image 1')
                            .swiper-slide 
                                +img('hero-work-inner/work-images_01.jpg', 'image 1')
                            .swiper-slide 
                                +img('hero-work-inner/work-images_01.jpg', 'image 1')
                            .swiper-slide 
                                +img('hero-work-inner/work-images_01.jpg', 'image 1')
                        .work-images__slider-nav.slider-nav 
                            button.work-images__prev.slider-nav__btn
                                svg(width='24' height='24' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
                                    path(fill-rule='evenodd' clip-rule='evenodd' d='M9.20711 17.2071C8.81658 17.5976 8.18342 17.5976 7.79289 17.2071L3.29289 12.7071C2.90237 12.3166 2.90237 11.6834 3.29289 11.2929L7.79289 6.79289C8.18342 6.40237 8.81658 6.40237 9.20711 6.79289C9.59763 7.18342 9.59763 7.81658 9.20711 8.20711L6.41421 11L20 11C20.5523 11 21 11.4477 21 12C21 12.5523 20.5523 13 20 13L6.41421 13L9.20711 15.7929C9.59763 16.1834 9.59763 16.8166 9.20711 17.2071Z')
                            button.work-images__next.slider-nav__btn
                                svg(width='24' height='24' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
                                    path(fill-rule='evenodd' clip-rule='evenodd' d='M14.7929 6.79289C15.1834 6.40237 15.8166 6.40237 16.2071 6.79289L20.7071 11.2929C21.0976 11.6834 21.0976 12.3166 20.7071 12.7071L16.2071 17.2071C15.8166 17.5976 15.1834 17.5976 14.7929 17.2071C14.4024 16.8166 14.4024 16.1834 14.7929 15.7929L17.5858 13H4C3.44772 13 3 12.5523 3 12C3 11.4477 3.44772 11 4 11H17.5858L14.7929 8.20711C14.4024 7.81658 14.4024 7.18342 14.7929 6.79289Z')
                    .work-images__slider-small.swiper 
                        .swiper-wrapper 
                            .swiper-slide 
                                +img('hero-work-inner/work-images-small_01.jpg', 'image 1 small')
                            .swiper-slide 
                                +img('hero-work-inner/work-images-small_01.jpg', 'image 1 small')
                            .swiper-slide 
                                +img('hero-work-inner/work-images-small_01.jpg', 'image 1 small')
                            .swiper-slide 
                                +img('hero-work-inner/work-images-small_01.jpg', 'image 1 small')
                            .swiper-slide 
                                +img('hero-work-inner/work-images-small_01.jpg', 'image 1 small')
                            .swiper-slide 
                                +img('hero-work-inner/work-images-small_01.jpg', 'image 1 small')
        section.project-goal 
            .container.grid
                .project-goal__column.project-goal__column--left
                    .project-goal__title.block-title
                        h2.block-title__title Project goal 
                    p.project-goal__description Build a&nbsp;private house 840&nbsp;sq. feet with a&nbsp;large living room, three bedrooms, two bathrooms, a&nbsp;terrace, a&nbsp;pool and a&nbsp;garage for two cars.
                    p.project-goal__description Modern design and care for each family member to&nbsp;feel as&nbsp;comfortable as&nbsp;possible in&nbsp;the new home.
                .project-goal__column.project-goal__column--right 
                    .project-goal__info
                        ul.project-goal__list.info-goal 
                            li.info-goal__item 
                                .info-goal__field Location
                                .info-goal__value 2464 Royal Ln. Mesa, New Jersey
                            li.info-goal__item 
                                .info-goal__field Client
                                .info-goal__value Darlene Robertson
                            li.info-goal__item 
                                .info-goal__field Architect
                                .info-goal__value HIK Architecture
                            li.info-goal__item 
                                .info-goal__field Size
                                .info-goal__value 840 sq. feet
                            li.info-goal__item 
                                .info-goal__field Value
                                .info-goal__value $2 million
                            li.info-goal__item 
                                .info-goal__field Completed
                                .info-goal__value May 2020
        section.decisions
            .container.grid 
                .decisions__column.decisions__column--left
                    img.decisions__image(src=require("@img/decisions/01.jpg"), alt="Constructive decisions image" aria-hidden="true")
                .decisions__column.decisions__column--right
                    .decisions__title.block-title
                        h2.block-title__title Constructive decisions
                    ul.decisions__list
                        li.decisions__item Vitae ultrices ornare eu&nbsp;sed in&nbsp;est quisque duis&nbsp;id.
                        li.decisions__item A&nbsp;fermentum in&nbsp;morbi pretium aliquam adipiscing donec tempus.
                        li.decisions__item Mauris odio pellentesque commodo, diam.
                        li.decisions__item Fermentum vestibulum est fermentum, egestas gravida scelerisque quis.
                        li.decisions__item At&nbsp;pharetra libero blandit risus, fringilla sed commodo diam.
                        li.decisions__item Integer ultricies viverra ut&nbsp;enim viverra&nbsp;ut.
        section.similar-projects 
            .container
                .similar-projects__top
                    .similar-projects__title.block-title.block-title--slider-nav 
                        h2.block-title__title Similar projects
                    .similar-projects__slider-nav.slider-nav 
                        button.similar-projects__prev.slider-nav__btn
                            svg(width='24' height='24' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
                                path(fill-rule='evenodd' clip-rule='evenodd' d='M9.20711 17.2071C8.81658 17.5976 8.18342 17.5976 7.79289 17.2071L3.29289 12.7071C2.90237 12.3166 2.90237 11.6834 3.29289 11.2929L7.79289 6.79289C8.18342 6.40237 8.81658 6.40237 9.20711 6.79289C9.59763 7.18342 9.59763 7.81658 9.20711 8.20711L6.41421 11L20 11C20.5523 11 21 11.4477 21 12C21 12.5523 20.5523 13 20 13L6.41421 13L9.20711 15.7929C9.59763 16.1834 9.59763 16.8166 9.20711 17.2071Z')
                        button.similar-projects__next.slider-nav__btn
                            svg(width='24' height='24' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
                                path(fill-rule='evenodd' clip-rule='evenodd' d='M14.7929 6.79289C15.1834 6.40237 15.8166 6.40237 16.2071 6.79289L20.7071 11.2929C21.0976 11.6834 21.0976 12.3166 20.7071 12.7071L16.2071 17.2071C15.8166 17.5976 15.1834 17.5976 14.7929 17.2071C14.4024 16.8166 14.4024 16.1834 14.7929 15.7929L17.5858 13H4C3.44772 13 3 12.5523 3 12C3 11.4477 3.44772 11 4 11H17.5858L14.7929 8.20711C14.4024 7.81658 14.4024 7.18342 14.7929 6.79289Z')
                .similar-projects__works.swiper
                    .swiper-wrapper 
                        .swiper-slide 
                            a.similar-projects__item.item-portfolio(href="#")
                                +img("similar-projects/01.png", "Luxury Beach House")(class="item-portfolio__image")
                                .item-portfolio__content
                                    h3.item-portfolio__title Luxury Beach House
                                    span.item-portfolio__description Private Houses
                                    .item-portfolio__btn.btn.btn--outline-primary.btn--regular View Project
                        .swiper-slide
                            a.similar-projects__item.item-portfolio(href="#")
                                +img("similar-projects/02.png", "Brown and Gray Painted House")(class="item-portfolio__image")
                                .item-portfolio__content
                                    h3.item-portfolio__title Brown and Gray Painted House
                                    span.item-portfolio__description Private Houses
                                    .item-portfolio__btn.btn.btn--outline-primary.btn--regular View Project
                        .swiper-slide
                            a.similar-projects__item.item-portfolio(href="#")
                                +img("similar-projects/03.png", "Scandinavian Style Interior")(class="item-portfolio__image")
                                .item-portfolio__content
                                    h3.item-portfolio__title Scandinavian Style Interior
                                    span.item-portfolio__description Private Houses
                                    .item-portfolio__btn.btn.btn--outline-primary.btn--regular View Project
                .similar-projects__explore.learn-more
                    h4.learn-more__subtitle Explore all our works
                    a.learn-more__btn.btn.btn--fill-primary.btn--large(href="#") View Portfolio
        section.contacts-section 
            .contacts-section__container.container
                h2.visually-hidden Contacts 
                form.contacts-section__form.form-contacts(action="POST") 
                    h2.form-contacts__title.form-title A&nbsp;quick way to&nbsp;discuss details
                    label.form-contacts__field.form-field.form-field--contacts
                        span.form-field__caption Name* 
                        input.form-field__input(type="text" name="name" placeholder="Your name" data-req)
                    label.form-contacts__field.form-field.form-field--contacts
                        span.form-field__caption Phone* 
                        input.form-field__input(type="tel" name="phone" placeholder="Your phone number" data-req)
                    label.form-contacts__field.form-field.form-field--contacts
                        span.form-field__caption Email 
                        input.form-field__input(type="email" name="email" placeholder="Your working email")
                    label.form-contacts__field.form-field.form-field--contacts
                        span.form-field__caption Message* 
                        textarea.form-field__input.form-field__input--big(name="message" placeholder="Your message" data-req)
                    label.form-contacts__checkbox.form-checkbox 
                        input.form-checkbox__input(type="checkbox")
                        span.form-checkbox__text.
                            I&nbsp;agree to&nbsp;receive communications from Createx Construction Bureau.
                    button.form-contacts__btn.btn.btn--fill-primary.btn--regular(type="submit") Send request
